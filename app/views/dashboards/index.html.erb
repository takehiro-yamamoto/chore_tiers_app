
<div class="w-full max-w-screen-xl mx-auto px-4 py-6 space-y-6 overflow-hidden">

  <!-- サマリーカード -->
  <%= render "summary_cards" %>

  <!-- ティアリスト -->
  <%= render "tier_list" %>

  <!-- ティア別進捗 -->
  <%= render "tier_progress" %>

  <!-- 今週の予定サマリー -->
  <%= render "upcoming_summary" %>

  <!-- カレンダー（横幅広く） -->
  <div class="w-full">
    <%= render "calendar" %>
  </div>

  <!-- ✅ ユーザー別グラフ＆完了履歴（横並び） -->
  <div class="grid grid-cols-2 gap-4 h-64">
    <%= render "user_chart" %>
    <%= render "recent_logs" %>
  </div>

  <!-- 新規家事作成ボタン -->
  <%= render "new_chore_button" %>

  <!-- 未完了家事リンク -->
  <%= render "link_to_incomplete" %>
</div>

<div class="tier-list-select-form">
  <%= form_with url: dashboards_path, method: :get, local: true, data: { turbo_frame: "dashboard" } do %>
    <label for="tier_list_id">ティアリストを選択：</label>
    <%= select_tag :tier_list_id,
          options_from_collection_for_select(@tier_lists, :id, :name, @selected_tier_list&.id),
          onchange: "this.form.submit();" %>
  <% end %>
</div>

<div class="dashboard-container">

  <!-- カレンダー（最上段へ移動） -->
  <div class="dashboard-calendar-row">
  <%= render 'calendar' %>
  <div class="tierlist-with-progress">
    <%= render 'tier_list' %>
    <%= render 'tier_progress' %>
  </div>
</div>

 <!-- ダッシュボードの統計情報 -->
 <div class="dashboard-stats-row">
  <div class="upcoming-summary-col">
    <%= render 'upcoming_summary' %>
  </div>
  <div class="user-chart-col">
    <%= render 'user_chart' %>
  </div>
  <div class="recent-logs-col">
    <%= render 'recent_logs' %>
  </div>
</div>

</div>

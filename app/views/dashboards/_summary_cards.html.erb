<div class="summary-cards-row">
  <div class="summary-card all">
    <div class="summary-label">全家事数</div>
    <div class="summary-count"><span><%= @total_chores %></span><span class="summary-unit">件</span></div>
  </div>
  <div class="summary-card completed">
    <div class="summary-label">完了済</div>
    <div class="summary-count"><span><%= @completed_chores %></span><span class="summary-unit">件</span></div>
  </div>
  <div class="summary-card incomplete">
    <div class="summary-label">未完了</div>
    <div class="summary-count"><span><%= @incomplete_chores %></span><span class="summary-unit">件</span></div>
  </div>
</div>

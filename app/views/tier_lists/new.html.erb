<div class="tier-list-new-container">
  <div class="tier-list-card">
    <h2 class="tier-list-title">ティアリストを作成</h2>

    <%= form_with(model: @tier_list, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, "ティアリスト名", class: "form-label" %>
        <%= f.text_field :name, class: "input-text", placeholder: "例：日常家事リスト" %>
      </div>

      <div class="form-actions">
        <%= f.submit "作成する", class: "btn-submit" %>
      </div>
    <% end %>
  </div>
</div>
